    p[["x"]] <- x
    data.frame("x" = x, "fx" = do.call(dbeta, p))
}, .id = "comp")

da$comp <- forcats::fct_inorder(factor(da$comp))
lattice::xyplot(fx ~ x | comp,
                type = "l",
                scales = list(draw = FALSE),
                xlab = expression(x),
                ylab = expression(f(x)),
                data = da)

